<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.pokemons.detail.DetailFragment">

   <ImageView
       android:id="@+id/detail_image_pokemon"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="250dp"
       android:layout_height="250dp"/>

   <TextView
       android:id="@+id/detail_txt_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/poppins_semibold"
       android:textColor="#000000"
       android:textSize="40sp"
       app:layout_constraintEnd_toEndOf="@id/detail_image_pokemon"
       app:layout_constraintStart_toStartOf="@id/detail_image_pokemon"
       app:layout_constraintTop_toBottomOf="@id/detail_image_pokemon" />

   <TextView
       android:id="@+id/detail_txt_type"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:fontFamily="@font/montserrat"
       android:textColor="#4B4B4B"
       android:textSize="18sp"
       app:layout_constraintEnd_toEndOf="@id/detail_txt_name"
       app:layout_constraintStart_toStartOf="@id/detail_txt_name"
       app:layout_constraintTop_toBottomOf="@id/detail_txt_name" />

</androidx.constraintlayout.widget.ConstraintLayout>